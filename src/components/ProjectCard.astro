---
interface Props {
  title: string
  description: string
  liveUrl: string
  githubUrl?: string
  techStack: string[]
}

const { title, description, liveUrl, githubUrl, techStack } = Astro.props
---

<article
  class="group rounded-card border border-slate-200 bg-surface p-6 transition-all hover:border-brand/50 hover:shadow-lg hover:border-brand/30"
>
  <h3
    class="mb-2 text-lg font-semibold text-text-primary"
  >
    {title}
  </h3>
  <p
    class="mb-4 text-sm text-text-secondary"
  >
    {description}
  </p>

  <!-- Tech stack tags -->
  <div class="mb-4 flex flex-wrap gap-2">
    {
      techStack.map((tech) => (
        <span class="rounded-full bg-surface-alt px-3 py-1 text-xs font-medium text-text-secondary">
          {tech}
        </span>
      ))
    }
  </div>

  <!-- Links -->
  <div class="flex gap-4">
    <a
      href={liveUrl}
      target="_blank"
      rel="noopener noreferrer"
      class="text-sm font-medium text-brand hover:text-brand-dark transition-colors"
    >
      View live ↗
    </a>
    {
      githubUrl && (
        <a
          href={githubUrl}
          target="_blank"
          rel="noopener noreferrer"
          class="text-sm font-medium text-text-secondary hover:text-brand transition-colors"
        >
          GitHub ↗
        </a>
      )
    }
  </div>
</article>
