---
import { Github, Twitter, Linkedin, FileCode } from 'lucide-astro'
interface Props {
  size?: 'sm' | 'md'
}

const { size = 'md' } = Astro.props
const iconSize = size === 'sm' ? 'h-4 w-4' : 'h-5 w-5'
const linkClass = `text-text-secondary-light hover:text-brand dark:text-text-secondary-dark dark:hover:text-brand-light transition-colors`

const links = [
  { label: 'GitHub', href: 'https://github.com/sami', icon: Github },
  { label: 'X / Twitter', href: 'https://x.com/madebysami', icon: Twitter },
  { label: 'dev.to', href: 'https://dev.to/sami', icon: FileCode },
  {
    label: 'LinkedIn',
    href: 'https://linkedin.com/in/samibashraheel',
    icon: Linkedin,
  },
]
---

<div class="flex items-center gap-4">
  {
    links.map(({ href, label, icon: Icon }) => (
      <a
        href={href}
        target="_blank"
        rel="noopener noreferrer"
        aria-label={label}
        class={linkClass}
      >
        <Icon class={iconSize} />
      </a>
    ))
  }
</div>
