---
import { Icon } from 'astro-icon/components'

const technologies = [
  { name: 'TypeScript', icon: 'tabler:brand-typescript' },
  { name: 'React', icon: 'tabler:brand-react' },
  { name: 'Astro', icon: 'tabler:rocket' },
  { name: 'Tailwind CSS', icon: 'tabler:brand-tailwind' },
  { name: 'Python', icon: 'tabler:brand-python' },
  { name: 'Node.js', icon: 'tabler:brand-nodejs' },
  { name: 'Git', icon: 'tabler:brand-git' },
]
---

<section class="mx-auto max-w-5xl px-4 py-section">
  <h2
    class="mb-2 text-heading font-bold text-text-primary"
  >
    Tech Stack
  </h2>
  <p class="mb-8 text-text-secondary">
    Technologies I work with.
  </p>

  <div class="flex flex-wrap gap-4">
    {
      technologies.map(({ name, icon }) => (
        <div class="flex items-center gap-2 rounded-lg border border-slate-200 bg-surface px-4 py-2">
          <Icon name={icon} class="h-5 w-5 text-brand" />
          <span class="text-sm font-medium text-text-primary">
            {name}
          </span>
        </div>
      ))
    }
  </div>
</section>
