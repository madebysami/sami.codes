---
const technologies = [
  'React',
  'Astro',
  'TypeScript',
  'Tailwind CSS',
  'Python',
  'Node.js',
  'Git',
]
---

<section aria-labelledby="skills-heading" class="w-full">
  <h2
    id="skills-heading"
    class="text-xs uppercase tracking-widest font-bold mb-6 font-mono text-brand"
  >
    Stack
  </h2>
  <ul
    id="skills-list"
    class="flex flex-wrap gap-3 list-none p-0 m-0"
    role="list"
    aria-label="Technology stack"
  >
    {
      technologies.map((tech) => (
        <li class="skill-tag px-4 py-2 rounded-md text-sm bg-brand/10 text-brand border border-brand/30 font-mono transition-transform duration-500 hover:-translate-y-0.5 hover:bg-brand/30 cursor-default">
          {tech}
        </li>
      ))
    }
  </ul>
</section>
