---
import SocialLinks from './SocialLinks.astro'
---

<footer
  class="py-10 flex flex-col md:flex-row justify-between items-center text-xs font-mono gap-2 text-text-secondary w-full"
  role="contentinfo"
>
  <p>&copy; 2026 Sami Bashraheel.</p>
  <button
    id="cookie-preferences"
    class="underline hover:no-underline cursor-pointer transition-opacity hover:opacity-80 text-text-secondary bg-transparent border-none font-inherit text-inherit"
  >
    Cookie Preferences
  </button>
  <p>London, UK.</p>
</footer>
<script>
  const cookieBtn = document.getElementById('cookie-preferences')
  if (cookieBtn) {
    cookieBtn.addEventListener('click', () => {
      const accepted = localStorage.getItem('cookiesAccepted') === 'true'

      if (accepted) {
        localStorage.removeItem('cookiesAccepted')
        alert('Cookies cleared. You are invisible again ü•∑')
      } else {
        localStorage.setItem('cookiesAccepted', 'true')
        alert('Cookie preferences saved. We now pretend to track you üç™')
      }
    })
  }
</script>
