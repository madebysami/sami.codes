---
import ThemeToggle from './ThemeToggle.astro'
---

<header
  class="py-10 flex flex-col md:flex-row gap-6 justify-between items-center w-full relative z-20"
  role="banner"
>
  <!-- Developer Logo -->
  <a
    href="/"
    class="logo select-none"
    role="img"
    aria-label="Sami Bashraheel Logo"
  >
    <svg
      width="280"
      height="50"
      viewBox="0 0 280 50"
      fill="none"
      xmlns="http://www.w3.org/2000/svg"
      aria-hidden="true"
    >
      <title>Sami Bashraheel</title>
      <text
        x="0"
        y="35"
        font-family="'Fira Code', monospace"
        font-size="24"
        class="logo-bracket"
        font-weight="bold">&lt;</text
      >
      <text
        x="20"
        y="35"
        font-family="'Fira Code', monospace"
        font-size="24"
        class="logo-name"
        font-weight="bold">Sami Bashraheel</text
      >
      <text
        x="250"
        y="35"
        font-family="'Fira Code', monospace"
        font-size="24"
        class="logo-bracket"
        font-weight="bold">/&gt;</text
      >
    </svg>
  </a>

  <!-- Controls -->
  <nav
    class="flex items-center gap-3 flex-wrap justify-center"
    aria-label="Site controls"
  >
    <ThemeToggle />
    <button
      id="contact-trigger"
      class="cta-btn px-6 py-2 rounded-lg"
      aria-label="Contact via email"
    >
      Say Hello ðŸ‘‹
    </button>
  </nav>
</header>

<script>
  // Contact CTA Handler
  const contactTrigger = document.getElementById('contact-trigger')
  if (contactTrigger) {
    contactTrigger.addEventListener('click', function (e) {
      const email = 'hello@sami.codes'
      window.location.href = 'mailto:' + email
      this.textContent = email
    })
  }
</script>
